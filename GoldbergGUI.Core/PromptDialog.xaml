<Window x:Class="GoldbergGUI.Core.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoldbergGUI.Core"
        mc:Ignorable="d" MinHeight="100" MaxHeight="200" MinWidth="300">
    <StackPanel>
        <TextBlock Name="txtPrompt" VerticalAlignment="Center" Margin="10,5"/>
        <TextBox Name="txtResponse" VerticalAlignment="Center" Margin="10,5"/>
        <PasswordBox Name="txtPasswordResponse" VerticalAlignment="Center" Margin="10,5"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right" Grid.Row="2">
            <Button Name="btnOk" Content="OK" Width="75" Margin="5" Click="btnOk_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="75" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
        <TextBlock Name="txtInfo" VerticalAlignment="Center" Margin="10,5" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
